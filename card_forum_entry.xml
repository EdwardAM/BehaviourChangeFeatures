<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FFFFE8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_title"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Title"/>

        <TextView
            android:id="@+id/text_view_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toEndOf="@id/posted_by_label"
            android:layout_below="@+id/text_view_description"
            android:text="User" />

        <TextView
            android:id="@+id/text_view_description"
            android:maxLines="1"
            android:ellipsize = "end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_toEndOf="@id/partial_desc_label"
            android:layout_below="@+id/text_view_title"
            android:text="Description" />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/posted_on_label"
            android:layout_below="@+id/posted_by_label"
            android:text="Date" />


        <TextView
            android:id="@+id/partial_desc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_title"
            android:text="Post:"
             />

        <TextView
            android:id="@+id/posted_by_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partial_desc_label"
            android:text="Posted by:"
            />

        <TextView
            android:id="@+id/posted_on_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/posted_by_label"
            android:text="Date posted:"
             />

    </RelativeLayout>

</androidx.cardview.widget.CardView>